#!/usr/bin/env bash
RUNDIR="${XDG_RUNTIME_DIR}/gemini-healthchecker"

_target() { echo "gemini://$(basename "$1" | sed 's/:1965$//g')/"; }
_last_test() { _age "$(stat -c %Y "$1/state")"; }
_last_success() { _age "$(stat -c %Y "$1/last_success")"; }
_state() { [[ "$(tail -n1 "$1/state")" -eq 20 ]] && echo OK || echo FAIL; }
_age() { echo $(( $(date +%s) - $1 ))s ago; }

echo -e "# status.shit.cx\\n"
echo -e "This page shows the health of all targets checked. If you would like your Gemini Capsule to be monitored too, send a request to jon@shit.cx.\\n"

echo '```'
(
  echo -e "target\\tstatus\\tlast test\\tlast_success"
  for f in "${RUNDIR}"/*; do
    echo -e "$(_target "$f")\\t$(_state "$f")\\t$(_last_test "$f")\\t$(_last_success "$f")"
  done
) | column -t -s$'\t'
echo '```'

echo
echo -e "=> https://git.sr.ht/~jonhiggs/gemini-healthchecker The source to run your own gemini-healthchecker can be found at https://git.sr.ht/~jonhiggs/gemini-healthchecker/.\\n"
echo "This page was generated at $(date --iso-8601=seconds | sed 's/\+.*//')."

exit 0
